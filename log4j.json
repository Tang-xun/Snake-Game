{
    "appenders": [
        {
            "category": "console",
            "type": "console"
        },
        {
            "category": "log_access",
            "type": "datefile",
            "filename": "./logs/log_access/access"
        },
        {
            "category": "log_info",
            "type": "datefile",
            "filename": "./logs/log_info/info"
        },
        {
            "category": "log_stat",
            "type": "datefile",
            "filename": "./logs/log_stat/stat"
        },
        {
            "category": "log_trace",
            "type": "datefile",
            "filename": "./logs/log_trace/trace"
        },
        {
            "category": "log_error",
            "type": "datefile",
            "filename": "./logs/log_error/error"
        }
    ],
    "replaceConsole": true,
    "levels": {
        "log_stat": "ALL",
        "log_info": "ALL",
        "log_trace": "ALL",
        "log_error": "ALL"
    }
}